<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.elearningproject.ReponseEtudiantController">
    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <Label text="Réponse de l'étudiant" textFill="#1ba15a">
         <font>
            <Font name="System Bold" size="24.0" />
         </font></Label>
        <TextArea fx:id="reponseTextArea" prefHeight="100.0" prefWidth="200.0" />

        <Button onAction="#enregistrerReponse" text="Enregistrer" />
    </VBox>
</AnchorPane>
